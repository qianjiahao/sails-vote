<div class="container item-index">
	<% if(!flash.success && flash.failure){ %>
		<div class="alert alert-danger">
			<button class="close" type="button" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<span><%= flash.failure %></span>
		</div>
	<%	} %>
	<h2>题目列表</h2>

	<table class="table table-hover">
		<tr>
			<td></td>
			<td>ID</td>
			<td>Title</td>
			<td></td>
			<td></td>
			<td></td>	
		</tr>
		<% _.each(items,function (item, index) {  %>
			<tr data-id="<%= item.id %>" data-model="item">
				<td><%= index+1 %></td>
				<td><%= item.id %></td>
				<td><p class="item-index-title"><%= item.title %></p></td>
				<td><a href="/item/show/<%= item.id %>" class="btn btn-sm btn-primary">查看</a></td>
				<td><a href="/item/edit/<%= item.id %>" class="btn btn-sm btn-warning">编辑</a></td>
				<td><form method="POST" action="/item/destroy/<%= item.id %>">
					<input type="submit" class="btn btn-sm btn-danger" value="删除">
					<input type="hidden" name="_csrf" value="<%= _csrf %>">
				</form></td>
			</tr>
		<%	})%>
	</table>
</div>

