<div class="container item-index">
	
	<%- include ../flash%>

	<h2>Items List</h2>

	<table class="table table-hover">
		<tr>
			<td></td>
			<td>ID</td>
			<td>Title</td>
			<td></td>
			<td></td>
			<td></td>	
		</tr>
		<% _.each(items,function (item, index) {  %>
			<tr data-id="<%= item.id %>" data-model="item">
				<td><%= index+1 %></td>
				<td><%= item.id %></td>
				<td><p class="item-index-title"><%= item.title %></p></td>
				<td><a href="/item/show/<%= item.id %>" class="btn btn-sm btn-primary">show</a></td>
				<td><a href="/item/edit/<%= item.id %>" class="btn btn-sm btn-warning">edit</a></td>
				<td><form method="POST" action="/item/destroy/<%= item.id %>">
					<input type="submit" class="btn btn-sm btn-danger" value="destroy">
					<input type="hidden" name="_csrf" value="<%= _csrf %>">
				</form></td>
			</tr>
		<%	})%>
	</table>
</div>

