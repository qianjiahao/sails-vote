<div class="container item-edit">

	<h2>Edit Item</h2>
	<% if(flash.success && !flash.failure) {%>
		<div class="alert alert-success alert-dismissible">
			<button class="close" type="button" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<span><%= flash.success %></span>
		</div>
	<% }else if(!flash.success && flash.failure){ %>
		<div class="alert alert-danger">
			<button class="close" type="button" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<span><%= flash.failure %></span>
		</div>
	<%	} %>

	<form class="form-horizontal" method="POST" action="/item/update/<%= item.id %>">

		<div class="form-group">
			<lable class="col-sm-2" for="textarea">题目描述</lable>
			<div class="col-sm-10">
				<textarea name="title" class="form-control" id="textarea" placeholder="题目描述" rows="4" autocomplete="off" ><%= item.title %></textarea>	
			</div>
		</div>
		<% _.each(item.content, function (option, index) {  %>
			<div class="form-group">
				<label class="col-sm-2" for="option-<%= index+1%>">选项 <%= index+1%></label>
				<div class="col-sm-10">
					<input type="text" name="option" class="form-control" id="option-<%= index %>" autocomplete="off" placeholder="选项" value="<%= option %>">
				</div>
			</div>			

		<%	})%>

		<input type="hidden" name="_csrf" value="<%= _csrf %>">
		
		<div class="form-group">
			<div class="col-sm-6">
				<input type="submit" class="btn btn-mid btn-primary btn-block" value="更新">			
			</div>
			<div class="col-sm-6">
				<input type="reset" class="btn btn-mid btn-warning btn-block" value="重置">			
			</div>
		</div>
	</form>	
</div>
