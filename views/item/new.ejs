<div class="container item-new">

	<%- include ../flash%>

	<h2>New Item</h2>
	<form class="form-horizontal" method="POST" action="/item/create">
		<div class="form-group">
			<lable class="col-sm-2" for="textarea">题目描述</lable>
			<div class="col-sm-10">
				<textarea name="title" class="form-control" id="textarea" placeholder="题目描述" rows="4" autocomplete="off"></textarea>	
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2" for="option-1">选项 1</label>
			<div class="col-sm-10">
				<input type="text" name="option" class="form-control" id="option-1" autocomplete="off" placeholder="选项">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2" for="option-2">选项 2</label>
			<div class="col-sm-10">
				<input type="text" name="option" class="form-control" id="option-2" autocomplete="off" placeholder="选项">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2" for="option-3">选项 3</label>
			<div class="col-sm-10">
				<input type="text" name="option" class="form-control" id="option-3" autocomplete="off" placeholder="选项">
			</div>
		</div>

		<input type="hidden" name="_csrf" value="<%= _csrf %>">
		
		<div class="form-group">
			<div class="col-sm-6">
				<input type="submit" class="btn btn-mid btn-success btn-block" value="添加">			
			</div>
			<div class="col-sm-6">
				<input type="reset" class="btn btn-mid btn-warning btn-block" value="重置">			
			</div>
		</div>
	</form>	
</div>
